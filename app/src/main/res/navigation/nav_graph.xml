<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUp">

    <fragment
        android:id="@+id/signUp"
        android:name="com.faithdeveloper.giveaway.ui.fragments.SignUp"
        android:label="layout_account_creation"
        tools:layout="@layout/layout_account_creation">
        <action
            android:id="@+id/action_signUp_to_signIn"
            app:destination="@id/signIn"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_signUp_to_userUnverified"
            app:destination="@id/userUnverified"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/feed"
        android:name="com.faithdeveloper.giveaway.ui.fragments.Feed"
        android:label="Feed"
        tools:layout="@layout/layout_feed">
        <action
            android:id="@+id/action_home2_to_search2"
            app:destination="@id/search"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_home_to_profile2"
            app:destination="@id/profile"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_home_to_need2"
            app:destination="@id/newpost"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_home_to_exchange"
            app:destination="@id/comments"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_home_to_webView2"
            app:destination="@id/webView2"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            />
        <argument
            android:name="newPostAvailable"
            app:argType="boolean"
            android:defaultValue="false" />

    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.faithdeveloper.giveaway.ui.fragments.SignIn"
        android:label="layout_sign_in"
        tools:layout="@layout/layout_sign_in">
        <action
            android:id="@+id/action_signIn_to_home2"
            app:destination="@id/feed"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_signIn_to_signUp"
            app:destination="@id/signUp"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_signIn_to_userUnverified"
            app:destination="@id/userUnverified"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/search"
        android:name="com.faithdeveloper.giveaway.ui.fragments.Search"
        android:label="Search"
        tools:layout="@layout/layout_search" />
    <fragment
        android:id="@+id/profile"
        android:name="com.faithdeveloper.giveaway.ui.fragments.Profile"
        android:label="layout_profile"
        tools:layout="@layout/layout_profile">
        <action
            android:id="@+id/action_profile_to_webView2"
            app:destination="@id/webView2"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <argument
            android:name="userProfile"
            app:argType="boolean"
            android:defaultValue="true" />

        <action
            android:id="@+id/action_profile_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_profile_to_profileEdit"
            app:destination="@id/profileEdit"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_profile_to_newpost"
            app:destination="@id/newpost"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/newpost"
        android:name="com.faithdeveloper.giveaway.ui.fragments.NewPost"
        android:label="New Post"
        tools:layout="@layout/layout_post"/>
    <fragment
        android:id="@+id/comments"
        android:name="com.faithdeveloper.giveaway.ui.fragments.CommentsBottomSheet"
        android:label="Comments"
        tools:layout="@layout/layout_comments" />
    <fragment
        android:id="@+id/webView2"
        android:name="com.faithdeveloper.giveaway.ui.fragments.WebView"
        android:label="layout_webview"
        tools:layout="@layout/layout_webview">
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.faithdeveloper.giveaway.ui.fragments.SettingsFragment"
        android:label="SettingsFragment">
        <action
            android:id="@+id/action_settingsFragment_to_signUp"
            app:destination="@id/signUp"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_settingsFragment_to_profileEdit"
            app:destination="@id/profileEdit"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/profileEdit"
        android:name="com.faithdeveloper.giveaway.ui.fragments.ProfileEdit"
        android:label="ProfileEdit" />
    <fragment
        android:id="@+id/userUnverified"
        android:name="com.faithdeveloper.giveaway.ui.fragments.UserUnverified"
        android:label="layout_unverified_email"
        tools:layout="@layout/layout_unverified_email" >
        <argument
            android:name="email"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="linkSent"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_userUnverified_to_signIn"
            app:destination="@id/signIn"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
</navigation>